<%- include("partials/header.ejs") %>

<form
  action="/submitblog"
  method="post"
  class="lg:flex lg:justify-center my-auto px-4"
>
  <div
    class="border-1 border-gray-400 p-6 text-base lg:w-1/3 flex flex-col items-center rounded"
  >
    <div class="my-4 px-2 flex justify-between w-full">
      <label for="blog_title" class="mr-7 w-1/4">Blog Title</label>
      <input
        type="text"
        placeholder="Enter blog title"
        class="bg-white text-center border-1 border-gray-600 grow"
        name="blog_title"
        autofocus
        required
      />
    </div>

    <div class="my-4 px-2 flex justify-between w-full">
      <label for="blog_category" class="mr-7 w-1/4">Blog category</label>
      <input
        type="text"
        placeholder="Enter blog category"
        class="bg-white text-center border-1 border-gray-600 grow"
        name="blog_category"
      
        required
      />
    </div>

    <div class="my-4 px-2 flex justify-between w-full">
      <label for="blog_title" class="mr-7 w-1/4">Blog Author</label>
      <input
        type="text"
        placeholder="Enter blog author"
        class="bg-white text-center border-1 border-gray-600 grow"
        name="blog_author"
     
        required
      />
    </div>

    <div class="my-4 px-2 flex  w-full flex-col">
      <label for="blog_text" class="mr-7 mb-2">Blog text</label>
      <textarea
        class="border-1 border-gray-600 rounded p-2"
        name="blog_text"
  
        required
        rows="10"
      >
      </textarea>
    </div>

    <div class="my-4"><button type="submit" class="bg-black text-white px-4 py-1 rounded text-lg">post</button></div>
  </div>
</form>
<%- include("partials/footer.ejs") %>
